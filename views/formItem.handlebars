<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class=""></i> Register Item</h1>
            {{!-- Mensagens alerta de erro --}}
            {{#if errors}}
            {{#each errors}}
            <div class="alert alert-danger">
                {{msg}}
            </div>
            {{/each}}
            {{/if}}
            <form action="/postItem" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="itemName" name="name" class="form-control" placeholder="Enter item name" />
                </div>
                <div class="form-group">
                    <label for="model">Model</label>
                    <input type="text" id="itemModel" name="model" class="form-control"
                        placeholder="Enter item model" />
                </div>
                <div class="form-group">
                    <label for="model">Stock</label>
                    <input type="text" id="itemStock" name="stock" class="form-control"
                        placeholder="Enter item stock" />
                </div>
                <div class="form-group">
                    <label for="model">Url</label>
                    <input type="text" id="itemUrl" name="url" class="form-control" placeholder="Enter image URL" />
                </div>
                <div class="form-group">
                    <label for="model">Category</label>
                    <input type="text" id="itemCategory" name="category" class="form-control"
                        placeholder="Enter item category" />
                </div>
                <div class="form-group">
                    <label for="model">SubCategory</label>
                    <input type="text" id="itemSubCategory" name="subcategory" class="form-control"
                        placeholder="Enter item subcategory" />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Add Item</button>
            </form>
            <p class="lead mt-4">
                Want to see more? <a href="/readItems">Go to catalog</a>
            </p>
        </div>
    </div>
</div>